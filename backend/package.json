{
  "name": "garzon-twilio-dev-challenge",
  "version": "0.0.1",
  "description": "Project for the Twilio Challenge organized by DEV.",
  "author": "@asyncerror",
  "type": "module",
  "private": true,
  "license": "MIT",
  "imports": {
    "#common/*": [
      "./dist/common/*"
    ],
    "#env/*": [
      "./dist/env/*"
    ],
    "#*": "./dist/*"
  },
  "scripts": {
    "typeorm": "typeorm-ts-node-esm",
    "typeorm:schema:sync": "env-cmd npm run typeorm schema:sync -- -d ./dist/db/db-default.config.js",
    "typeorm:migration:generate": "env-cmd npm run typeorm migration:generate -- -d ./dist/db/db-default.config.js",
    "typeorm:migration:pre": "env-cmd npm run typeorm migration:run -- -d ./dist/db/db-pre.config.js",
    "typeorm:migration:post": "env-cmd npm run typeorm migration:run -- -d ./dist/db/db-post.config.js",
    "typeorm:drop": "env-cmd node ./dist/db/seed/drop.seed.js",
    "typeorm:seed": "env-cmd node ./dist/db/seed/seed.js",
    "typeorm:seed:start": "npm run typeorm:drop && npm run typeorm:migration:pre && npm run typeorm:schema:sync && npm run typeorm:migration:post && npm run typeorm:seed",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/platform-express": "^10.3.9",
    "@react-email/render": "0.0.15",
    "@supercharge/request-ip": "^1.2.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^3.6.0",
    "nestjs-i18n": "^10.4.5",
    "nodemailer": "^6.9.13",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0",
    "validator": "^13.12.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.5.0",
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.9",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "env-cmd": "^10.1.0",
    "eslint": "^9.5.0",
    "eslint-config-love": "^53.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-promise": "^6.2.0",
    "globals": "^15.4.0",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.3.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0"
  }
}
