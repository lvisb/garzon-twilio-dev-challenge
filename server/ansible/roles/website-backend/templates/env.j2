JWT_SECRET="{{ jwt_secret }}"

BACKEND_PORT={{ garzon_backend_port }}
BACKEND_CORS={{ garzon_backend_cors }}

NYLAS_CLIENT_ID={{ nylas_client_id }}
NYLAS_API_KEY={{ nylas_api_key }}
