{% if node_env == "development" %}
DATABASE_URL="postgresql://postgres:@localhost:5432/garzon?schema=public"
NYLAS_REDIRECT_URI=http://localhost:{{ garzon_frontend_port }}
{% else %}
DATABASE_URL="postgres://{{ postgres_user }}:{{ postgres_password | urlencode }}@{{ postgres_host }}:{{ postgres_port }}/postgres"
NYLAS_REDIRECT_URI={{ garzon_external_address }}
{% endif %}

NODE_ENV={{ node_env }}

DOCKER_USER={{ user_admin }}
DOCKER_USER_UID={{ user_admin_uid }}
