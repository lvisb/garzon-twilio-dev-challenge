{% if node_env == "development" %}
NYLAS_REDIRECT_URI="http://localhost:{{ garzon_frontend_port }}/nylas/callback"
WEBSITE_API_BASE_URL=http://localhost:{{ garzon_backend_port }}
{% else %}
NYLAS_REDIRECT_URI="{{ garzon_external_address }}/nylas/callback"
WEBSITE_API_BASE_URL={{ garzon_external_address }}
{% endif %}

NODE_ENV={{ node_env }}

JWT_SECRET={{ jwt_frontend_secret }}

DOCKER_USER={{ user_admin }}
DOCKER_USER_UID={{ user_admin_uid }}
DOCKER_GROUP={{ user_admin }}
DOCKER_GROUP_GID={{ user_admin_uid }}

PORT={{ garzon_frontend_port }}

NYLAS_CLIENT_ID={{ nylas_client_id }}
